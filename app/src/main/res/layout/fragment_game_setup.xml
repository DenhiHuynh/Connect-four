<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="fragments.GameSetupFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Setup game"
        android:textColor="@color/black"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_firstplayer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight ="0.7"
            android:textSize="25sp"
            android:maxLength="20"
            android:hint="First player name"
            />
        <Button
            android:id="@+id/color_firstPlayer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/rounded_corner_yellow"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_secondplayer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight ="0.7"
            android:textSize="25sp"
            android:maxLength="20"
            android:hint="Second player name"
            />

        <Button
            android:id="@+id/color_secondPlayer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/rounded_corner_red"
            />
    </LinearLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/light_blue_A700"
        style="?android:attr/borderlessButtonStyle"
        android:text="Start new game"
        android:textSize="25sp" />

</LinearLayout>
